<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang saat tombol ditekan -->
            <stroke android:color="@color/secondary" android:width="2dp" /> <!-- Warna dan lebar stroke (garis tepi) saat tombol ditekan -->
            <corners android:radius="10dp" /> <!-- Jari-jari sudut tombol -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang tombol saat dalam keadaan normal -->
            <stroke android:color="@color/secondary" android:width="2dp" /> <!-- Warna dan lebar stroke (garis tepi) saat tombol dalam keadaan normal -->
            <corners android:radius="10dp" /> <!-- Jari-jari sudut tombol -->
        </shape>
    </item>
</selector>